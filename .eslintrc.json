{
  "root": true,
  "ignorePatterns": ["dist"],
  "extends": ["eslint:recommended"],
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "plugins": ["eslint-plugin-tsdoc"],
      "rules": {
        "tsdoc/syntax": "error"
      }
    }
  ]
}
