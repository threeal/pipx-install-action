{
  "root": true,
  "ignorePatterns": ["dist"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "plugins": ["eslint-plugin-tsdoc"],
      "rules": {
        "tsdoc/syntax": "error"
      }
    }
  ]
}
